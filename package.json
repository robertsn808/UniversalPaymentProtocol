{
  "name": "universal-payment-protocol",
  "version": "1.0.0",
  "description": "Universal Payment Protocol - Any Device + Internet = Payment Terminal",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:security": "vitest --run src/__tests__/security.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "security:check": "node scripts/security-check.js",
    "security:enhance": "node scripts/security-enhancement.js",
    "security:audit": "npm audit && npm run security:check && npm run security:enhance",
    "prepare": "husky install"
  },
  "keywords": [
    "payment",
    "protocol",
    "universal",
    "stripe",
    "pci-dss",
    "fintech"
  ],
  "author": "UPP Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.58.0",
    "@octokit/rest": "^22.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.1",
    "openai": "^5.12.1",
    "pg": "^8.13.1",
    "qrcode": "^1.5.3",
    "redis": "^5.8.0",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "winston": "^3.10.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "octokit-plugin-create-pull-request": "^6.0.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.3",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "micromatch": "^4.0.8"
  }
}

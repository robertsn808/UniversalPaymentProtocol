# Render Production Environment Configuration
NODE_ENV=production

# Server Configuration (Render provides PORT automatically)
# PORT is automatically set by Render

# Database Configuration (update with your Render PostgreSQL URL)
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# Security Configuration
JWT_SECRET=${JWT_SECRET}
WEBHOOK_SECRET=${WEBHOOK_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Stripe Configuration
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# CORS and Frontend (update with your Render URL)
FRONTEND_URL=${RENDER_EXTERNAL_URL}
CORS_ORIGINS=${RENDER_EXTERNAL_URL}

# Logging Configuration - More verbose for production debugging
LOG_LEVEL=debug
LOG_TO_FILE=false

# Rate Limiting - Higher limits for production traffic
API_RATE_LIMIT_REQUESTS=2000
API_RATE_LIMIT_WINDOW_MS=900000

# Payment-specific rate limiting (stricter but reasonable)
PAYMENT_RATE_LIMIT_REQUESTS=20
PAYMENT_RATE_LIMIT_WINDOW_MS=60000

# Authentication rate limiting
AUTH_RATE_LIMIT_REQUESTS=15
AUTH_RATE_LIMIT_WINDOW_MS=900000

# OpenAI Integration (optional)
OPENAI_API_KEY=${OPENAI_API_KEY}

# Better Stack Monitoring (optional)
BETTERSTACK_SOURCE_TOKEN=${BETTERSTACK_SOURCE_TOKEN}

# UPP Specific Configuration
UPP_MERCHANT_ID=${UPP_MERCHANT_ID}
UPP_API_VERSION=1.0.0

# Production Security Flags
SECURE_COOKIES=true
SESSION_SECURE=true
TRUST_PROXY=true
{
  "name": "universal-payment-protocol",
  "version": "1.0.0",
  "description": "Universal Payment Protocol - Any Device + Internet = Payment Terminal",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "tsx watch server/index.ts",
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs'); const path=require('path'); const src='src/modules/payments/card-demo.html'; const dest='dist/src/modules/payments/card-demo.html'; try { fs.mkdirSync(path.dirname(dest), {recursive:true}); if(fs.existsSync(src)) fs.copyFileSync(src, dest); } catch(e) { console.log('Demo file copy skipped:', e.message); }\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit && npm run security:check"
  },
  "keywords": [
    "payment",
    "protocol",
    "universal",
    "stripe",
    "pci-dss",
    "fintech"
  ],
  "author": "UPP Team",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.11.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.7",
    "stripe": "^12.12.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/pg": "^8.10.2",
    "@types/qrcode": "^1.5.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.45.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "micromatch": "^4.0.8"
  }
}

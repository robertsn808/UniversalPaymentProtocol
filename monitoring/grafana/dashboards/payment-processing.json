{
  "dashboard": {
    "id": null,
    "title": "Universal Payment Protocol - Payment Processing",
    "tags": ["upp", "payments", "hawaii"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Payment Volume Over Time",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(upp_payment_amount_total[5m]))",
            "legendFormat": "Total Payment Volume"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "currencyUSD",
            "label": "Volume (USD)"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "type": "singlestat",
        "title": "Total Transactions Today",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "increase(upp_payment_transactions_total[24h])",
            "legendFormat": "Transactions"
          }
        ],
        "format": "none",
        "prefix": "",
        "postfix": " transactions",
        "valueName": "total"
      },
      {
        "id": 3,
        "type": "singlestat",
        "title": "Success Rate",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "upp_payment_success_total / (upp_payment_success_total + upp_payment_failure_total)",
            "legendFormat": "Success Rate"
          }
        ],
        "format": "percentunit",
        "prefix": "",
        "postfix": " success rate",
        "valueName": "current"
      },
      {
        "id": 4,
        "type": "graph",
        "title": "Payment Processing Latency",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(upp_payment_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(upp_payment_processing_duration_seconds_bucket[5m]))",
            "legendFormat": "Median"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Processing Time (seconds)"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "type": "piechart",
        "title": "Payment Distribution by Device Type",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "upp_payment_by_device_type",
            "legendFormat": "{{device_type}}"
          }
        ]
      },
      {
        "id": 6,
        "type": "graph",
        "title": "Error Rates by Type",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(upp_payment_errors_total[5m])",
            "legendFormat": "{{error_type}}"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Errors per second"
          },
          {
            "format": "short"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "2d",
        "7d",
        "30d"
      ]
    }
  }
}
